<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:id="root"
	hgap="20" vgap="20" prefWidth="1200.0" prefHeight="900.0"
	fx:controller="gabelloni.hough.Controller">
	<GridPane xmlns:fx="http://javafx.com/fxml" fx:id="root"
	hgap="20" vgap="20" prefWidth="1200.0" prefHeight="900.0">
		<Button fx:id="botonCargar"		style="-fx-background-color: #008080;" text="Cargar Imagen"
			textAlignment="CENTER" textFill="WHITE" onAction="#botonCargarImagen"
			GridPane.columnIndex="0" GridPane.rowIndex="0" />
		<Label text="Imagen Original:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
		<ImageView xmlns:fx="http://javafx.com/fxml" fx:id="imgOriginal" GridPane.columnIndex="0" GridPane.rowIndex="1" />
		<ImageView xmlns:fx="http://javafx.com/fxml" fx:id="imgCanny" GridPane.columnIndex="1" GridPane.rowIndex="1" />
		<Label text="Cantidad de lineas a buscar:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
		<TextField fx:id="cantLineas" GridPane.columnIndex="1" GridPane.rowIndex="2" text="30" />
		<Button fx:id="botonLinea" style="-fx-background-color: #008080;" text="Buscar Lineas"
			textAlignment="CENTER" textFill="WHITE" onAction="#botonBuscarLineas"
			GridPane.columnIndex="0" GridPane.rowIndex="3" />
		<Button fx:id="botonCirculo" style="-fx-background-color: #008080;" text="Buscar Circulo"
			textAlignment="CENTER" textFill="WHITE" onAction="#botonBuscarCirculo"
			GridPane.columnIndex="1" GridPane.rowIndex="3" />
	
		
		<Label text="Bordes encontrados" GridPane.columnIndex="0" GridPane.rowIndex="5" />
	
		<ImageView xmlns:fx="http://javafx.com/fxml" fx:id="imgFinal" GridPane.columnIndex="0" GridPane.rowIndex="6" />
	</GridPane>
</GridPane>
